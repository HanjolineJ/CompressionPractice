{
  "name": "compressaction",
  "version": "0.1.0",
  "private": true,
  "description": "Raspberry-Pi-Imager-style launcher for multi-algorithm compression & benchmarks",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "vite build && electron-builder",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.0.0",
    "cross-env": "^10.1.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.10.0",
    "vite": "^5.4.0"
  },
  "dependencies": {
    "bytes": "^3.1.2",
    "fast-csv": "^5.0.1",
    "pretty-ms": "^9.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.hanjoline.compressaction",
    "files": [
      "dist/**",
      "electron/**",
      "src/backend/**",
      "assets/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "logs",
        "to": "logs"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
